entrypoint = "EVCharging/app/index.js"
modules = ["nodejs-20"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_05"

[unitTest]
language = "nodejs"

[deployment]
deploymentTarget = "cloudrun"
ignorePorts = false
build = ["sh", "-c", "cd EVCharging && npx expo start --web"]
run = ["sh", "-c", "npx serve -s EVCharging/web-build"]

[[ports]]
localPort = 8081
externalPort = 80
